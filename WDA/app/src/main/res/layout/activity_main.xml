<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="用户注册"
        android:id="@+id/tv1"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@id/tv1"
        android:text="用户名"
        android:textColor="#0000ff"
        android:id="@+id/tv2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv2"
        android:layout_alignRight="@id/tv2"
        android:layout_below="@id/tv2"
        android:layout_marginTop="20dp"
        android:text="密码"
        android:id="@+id/tv02"
        android:textColor="#ff00ff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv02"
        android:layout_below="@id/tv02"
        android:layout_marginTop="20dp"
        android:text="确认密码"
        android:id="@+id/tv01"
        android:textColor="#ff00ff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed1"
        android:layout_above="@id/tv02"
        android:layout_alignLeft="@+id/ed2"
        android:ems="10"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed2"
        android:layout_below="@id/ed1"
        android:layout_toRightOf="@id/tv02"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#ff00ff"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed3"
        android:layout_alignLeft="@id/ed2"
        android:layout_below="@id/ed2"
        android:ems="10"
        android:inputType="textPassword"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg1"
        android:layout_alignLeft="@id/ed3"
        android:layout_below="@id/tv01"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb1"
            android:text="男"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:id="@+id/rb2"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv3"
        android:layout_below="@id/tv01"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/rg1"
        android:text="性别"/>


</RelativeLayout>